{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "target": "ES2019",

    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "skipLibCheck": true,

    "strict": true,
    "noImplicitAny": true,

    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
